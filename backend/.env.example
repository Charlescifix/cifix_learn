# CIFIX LEARN Backend Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=CIFIX LEARN
APP_VERSION=1.0.0
APP_URL=http://localhost:3000
ENVIRONMENT=development
DEBUG=true

# Database Configuration
# For Railway PostgreSQL, use the provided DATABASE_URL
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cifixlearn

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Password Security
BCRYPT_ROUNDS=12

# AWS SES Configuration (for email services)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
SES_SOURCE_EMAIL=noreply@cifixlearn.online
SES_REPLY_TO_EMAIL=support@cifixlearn.online
SES_CONFIGURATION_SET=

# Email Templates
FRONTEND_URL=http://localhost:3000

# Default Admin User (for initial setup)
DEFAULT_ADMIN_EMAIL=admin@cifixlearn.online
DEFAULT_ADMIN_PASSWORD=change-this-secure-password

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=detailed

# Features
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ASSESSMENT_INTEGRATION=true

# External Services
STREAMLIT_ASSESSMENT_URL=https://kid-assessment.streamlit.app

# CORS Settings (for development, set to * - in production, use your domain)
CORS_ORIGINS=["http://localhost:3000","https://cifixlearn.online"]

# Session Management
SESSION_TIMEOUT_MINUTES=60
REMEMBER_ME_DAYS=30

# File Upload (if needed later)
MAX_UPLOAD_SIZE_MB=10
UPLOAD_DIR=uploads/

# Monitoring & Health Checks
HEALTH_CHECK_TIMEOUT=30
MONITORING_ENABLED=true

# Cache Settings (if using Redis later)
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600

# Production Security Headers
SECURE_HEADERS_ENABLED=true
FORCE_HTTPS=false

# Development Settings
RELOAD_ON_CHANGE=true
API_DOCS_ENABLED=true

# Example values for Railway deployment:
# DATABASE_URL=postgresql+asyncpg://postgres:password@containers-us-west-xx.railway.app:5432/railway
# APP_URL=https://your-app-name.up.railway.app
# ENVIRONMENT=production
# DEBUG=false