# CIFIX LEARN Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file with real credentials

# =============================================
# APPLICATION CONFIGURATION
# =============================================
APP_NAME=CIFIX LEARN
APP_URL=http://localhost:3000
APP_ENV=development
APP_DEBUG=true

# =============================================
# DATABASE CONFIGURATION
# =============================================
DB_HOST=switchback.proxy.rlwy.net
DB_PORT=45644
DB_NAME=railway
DB_USER=postgres
DB_PASSWORD=YOUR_ACTUAL_DATABASE_PASSWORD_HERE

# =============================================
# SECURITY CONFIGURATION
# =============================================

# JWT Secret - GENERATE A SECURE 256-bit KEY
# Use: openssl rand -base64 32
JWT_SECRET=YOUR_SECURE_JWT_SECRET_HERE_256_BITS

# Database Encryption Key - GENERATE A SECURE KEY  
# Use: openssl rand -base64 32
ENCRYPTION_KEY=YOUR_SECURE_ENCRYPTION_KEY_HERE

# Password Hashing Configuration
BCRYPT_ROUNDS=12
PASSWORD_MIN_LENGTH=8
REQUIRE_STRONG_PASSWORDS=true

# Session Management
SESSION_TIMEOUT=86400
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800

# Two-Factor Authentication (Future)
ENABLE_2FA=false

# =============================================
# AWS SES EMAIL CONFIGURATION
# =============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID_HERE
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY_HERE

# Email Settings
SES_SOURCE_EMAIL=noreply@yourdomain.com
SES_REPLY_TO_EMAIL=support@yourdomain.com
SES_CONFIGURATION_SET=cifix-learn-emails

# Email Templates
EMAIL_TEMPLATE_VERSION=v1
EMAIL_BRAND_COLOR=#5B47B0
EMAIL_LOGO_URL=https://yourdomain.com/logo.png

# =============================================
# API KEYS (NEVER COMMIT REAL KEYS)
# =============================================
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Payment Processing (Future)
STRIPE_PUBLIC_KEY=pk_test_YOUR_STRIPE_PUBLIC_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY

# =============================================
# SECURITY HEADERS & CORS
# =============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'
HSTS_MAX_AGE=31536000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# =============================================
# FEATURE FLAGS
# =============================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_SOCIAL_LOGIN=false
ENABLE_ANALYTICS=true

# =============================================
# EXTERNAL SERVICES
# =============================================

# Assessment Tool Integration
ASSESSMENT_TOOL_URL=https://kid-assessment.streamlit.app
ASSESSMENT_API_KEY=YOUR_ASSESSMENT_API_KEY_IF_NEEDED

# Analytics (Future)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# =============================================
# CONTACT & SUPPORT
# =============================================
SUPPORT_EMAIL=support@yourdomain.com
CONTACT_PHONE=+1-555-123-4567
PRIVACY_POLICY_URL=https://yourdomain.com/privacy
TERMS_OF_SERVICE_URL=https://yourdomain.com/terms

# =============================================
# DEVELOPMENT SETTINGS
# =============================================
LOG_LEVEL=debug
CORS_ORIGIN=http://localhost:3000

# Development Database (Optional - for local development)
DEV_DB_HOST=localhost
DEV_DB_PORT=5432
DEV_DB_NAME=cifix_learn_dev
DEV_DB_USER=dev_user
DEV_DB_PASSWORD=dev_password

# =============================================
# PRODUCTION OVERRIDES
# =============================================
# In production, override these:
# APP_ENV=production
# APP_DEBUG=false
# APP_URL=https://yourdomain.com
# LOG_LEVEL=info
# CORS_ORIGIN=https://yourdomain.com

# =============================================
# SECURITY NOTES
# =============================================
# 1. Generate strong random values for JWT_SECRET and ENCRYPTION_KEY
# 2. Use environment-specific values for database credentials
# 3. Never commit API keys or passwords to version control
# 4. Use HTTPS in production (SSL/TLS certificates)
# 5. Regularly rotate secrets and API keys
# 6. Monitor security logs for suspicious activity
# 7. Keep all dependencies updated
# 8. Use principle of least privilege for database access

# =============================================
# COMMANDS TO GENERATE SECURE KEYS
# =============================================
# JWT Secret: openssl rand -base64 32
# Encryption Key: openssl rand -base64 32  
# UUID: python -c "import uuid; print(uuid.uuid4())"
# Random String: python -c "import secrets; print(secrets.token_urlsafe(32))"